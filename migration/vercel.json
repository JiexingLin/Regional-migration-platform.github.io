{
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.11",
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.11",
      "NODE_ENV": "production"
    }
  },
  "env": {
    "USE_PYTHON_BACKEND": "true"
  },
  "rewrites": [
    {
      "source": "/api/python/(.*)",
      "destination": "/api/main_handler.py"
    }
  ]
} 