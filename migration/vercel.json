{
  "version": 2,
  "env": {
    "USE_PYTHON_BACKEND": "true",
    "NODE_ENV": "production"
  },
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "functions": {
    "api/main_handler.py": {
      "runtime": "python3.12"
    }
  },
  "rewrites": [
    {
      "source": "/api/python/:path*",
      "destination": "/api/main_handler.py"
    }
  ]
} 